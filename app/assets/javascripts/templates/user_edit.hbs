<form class="edit_user">
  <div class = "form-group">
    <label for="user_username">Username</label>
    <input type="text" value={{username}} name="user[username]" id="user_username" />
  </div>

  <div class = "form-group">
    <label for="user_email">Email</label>
    <input type="text" value={{email}} name="user[email]" id="user_email" />
  </div>

  <div class = "form-group">
    <label for="user_picture">Picture</label>
    <input type="text" value={{picture}} name="user[picture]" id="user_picture" />
  </div>
   <div class = "form-group">
    <label for="user_bio">Bio</label>
    <input type="text" value={{bio}} name="user[bio]" id="user_bio" />
  </div>
   <div class = "form-group">
    <label for="user_contact_link">Contact Link</label>
    <input type="text" value={{contact_link}} name="user[contact_link]" id="user_contact_link" />
  </div>
    <input type="submit" name="commit" value="Update user" class="btn btn-primary userEditSub" />

    
</form>