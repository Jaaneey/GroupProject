<div class="panel panel-default text-center" style="width:100%">
    <div class="panel-body">
      <h1>My Profile</h1>
    </div>
    <ul class="list-group">
        <li class="list-group-item">
            <div class="row">
                <div class="col-md-3 text-center">
                    <img src="<%= @user.picture %>" class="profilePicture"> <br>
                    <h3><%= @user.username %></h3>
                    <p>Mail:
                        <a href="mailto:<%= @user.email %>?Subject=Hello" target="_blank"><%= @user.email %></a>
                    </p>
                    Contact: <%= @user.contact_link %>
                </div>
                <div class="col-md-9">
                    <blockquote>
                        <p><%= @user.bio %></p>
                        <small> 
                            <cite title="<%= @user.contact_link %>">
                                <%= @user.username %>
                            </cite>
                        </small>
                    </blockquote>
                </div>
            </div>
        </li>   
        <li class="list-group-item">
            <h3>My Reviews</h3>
        </li>
        <li class="list-group-item">
            <div class="row">
                <div class="col-md-4">Title</div>
                <div class="col-md-6">Description</div>
                <div class="col-md-2">Raiting</div>
            </div>
            <% @user.reviews.each do |review| %>
                <div id="<%= review.id %>" class="row">
                        <div class="col-md-2"><%= review.title %></div>
                        <div class="col-md-4"><%= review.description %></div>
                        <div class="col-md-2"><%= review.rating %> </div>
                        <div class="col-md-2"><%= link_to "Edit", edit_review_path(review), class:"btn btn-warning" %></div>
                        <div class="col-md-2"><button class="btn btn-danger userDelete">Delete</button> </div>
                    
                    
                        <!--   <%= link_to "Delete", review, method: :delete, data:{confirm: "Are you sure you want to delete this review?",class:"btn btn-default userDelete"}%> -->  
                </div>
            <% end %> 
        </li>
    </ul>
</div>



