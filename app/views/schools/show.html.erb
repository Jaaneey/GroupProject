<h1>Schools#show</h1>
<p>Find me in app/views/schools/show.html.erb</p>
  <p><%= @school.name %></p>
  <p><%= @school.webpage %></p>
  <p><%= @school.logo %></p>
  <p><%= @school.address %></p>
  <p><%= @school.description %></p>
 

 <% if current_user %> 
<%= link_to 'New Review', new_user_review_path(current_user, school_id: @school.id), class:"btn btn-primary" %>
<% else %> 
<%= link_to 'New Review', login_path, class:"btn btn-primary" %>
<% end %>

<%= link_to 'Edit', edit_school_path(@school), class:"btn btn-primary" %>
